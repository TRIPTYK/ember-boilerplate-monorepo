{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "api-types": {},
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["src/**"],
            "outputs": ["dist/**"]
        },
        "build:watch": {
            "persistent": true,
            "cache": false
        },
        "start": {
            "persistent": true,
            "cache": false,
            "dependsOn": ["^build"]
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "lint:fix": {
            "dependsOn": ["^build"]
        },
        "format": {},
        "lint:format": {},
        "test": {
            "dependsOn": ["^build"]
        }
    }
}