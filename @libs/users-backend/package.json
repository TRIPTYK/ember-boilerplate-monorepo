  "type": "module",
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./*": {
      "import": "./dist/*.mjs",
      "types": "./dist/*.d.mts"
    }
  },
  "scripts": {
    "start": "vite-node --env-file-if-exists=.env src/app.bootstrap.ts",
    "start:production": "vite-node dist/app.bootstrap.js",
    "dev": "vite-node --env-file-if-exists=.env --watch src/app.bootstrap.ts",
    "test": "pnpm vitest run",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "lint": "pnpm concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:js": "oxlint --type-aware --type-check",
    "api:types": "vite-node src/gen-openapi.ts && openapi-typescript ./openapi.json --output ./src/api-types.ts",
    "lint:format": "oxfmt check src tests",
    "lint:format:fix": "oxfmt fix src tests",
    "format": "pnpm lint:format:fix",
    "mikro-orm": "vite-node --env-file-if-exists=.env node_modules/@mikro-orm/cli/esm.js",
    "lint:fix": "oxlint --type-aware --type-check --fix",
    "schema:update": "pnpm mikro-orm schema:update --run",
    "schema:drop": "pnpm mikro-orm schema:drop --run",
    "seed": "pnpm mikro-orm seeder:run",
    "schema:fresh": "pnpm mikro-orm schema:fresh --seed -r"
  },
  "dependencies": {
    "@fastify/cookie": "catalog:",
