  "type": "module",
  "types": "src/api-types.ts",
  "main": "app.bootstrap.js",
  "scripts": {
    "dev": "pnpm build:deps && concurrently \"pnpm turbo build:watch --filter ...\" \"vite-node --watch --env-file=.env src/app.bootstrap.ts\"",
    "dev:e2e": "pnpm build:deps && concurrently \"pnpm turbo build:watch --filter ...\" \"vite-node --watch --env-file=.env.e2e src/app.bootstrap.ts\"",
    "start": "pnpm build:deps && vite-node --env-file=.env src/app.bootstrap.ts",
    "start:e2e": "pnpm build:deps && tsx --env-file=.env.e2e src/app.bootstrap.ts",
    "e2e:setup": "node --env-file=.env.e2e node_modules/@mikro-orm/cli/esm.js schema:fresh --seed E2ESeeder --run",
    "test": "pnpm vitest run",
    "build": "pnpm vite build",
    "build:deps": "pnpm turbo build --filter ...",
    "lint": "pnpm concurrently \"pnpm:lint:*(!fix)\" --names \"lint:\"",
    "lint:js": "oxlint --type-aware --type-check",
    "api:types": "node src/gen-openapi.ts && openapi-typescript ./openapi.json --output ./src/api-types.ts",
    "lint:format": "oxfmt check src tests",
    "lint:format:fix": "oxfmt fix src tests",
    "format": "pnpm lint:format:fix",
    "mikro-orm": "vite-node --env-file-if-exists=.env node_modules/@mikro-orm/cli/esm.js",
    "lint:fix": "oxlint --type-aware --type-check --fix",
    "schema:update": "pnpm mikro-orm schema:update --run",
    "schema:drop": "pnpm mikro-orm schema:drop --run",
    "seed": "pnpm mikro-orm seeder:run",
    "schema:fresh": "pnpm mikro-orm schema:fresh --seed -r"
  },
